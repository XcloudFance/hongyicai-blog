---
interface Props {
    time: string;
    organization: string;
    title: string;
}

const { time, organization, title } = Astro.props;
---

<div class="experience-item">
    <div class="experience-time">{time}</div>
    <div class="experience-details">
        <span class="experience-title">{title}</span>
        <span class="experience-organization">{organization}</span>
    </div>
</div>

<style>
    .experience-item {
        display: flex;
        gap: 2rem;
        padding: 1.2rem 0;
        border-bottom: 1px solid #e5e7eb;
    }

    .experience-item:last-child {
        border-bottom: none;
    }

    .experience-time {
        flex: 0 0 160px;
        color: #6b7280;
        font-size: 0.95rem;
        font-weight: 500;
        padding-top: 0.2rem;
    }

    .experience-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .experience-title {
        font-weight: 700;
        color: #111827;
        font-size: 1.1rem;
    }

    .experience-organization {
        color: #4b5563;
        font-size: 1rem;
    }

    @media (max-width: 640px) {
        .experience-item {
            flex-direction: column;
            gap: 0.5rem;
        }

        .experience-time {
            flex: none;
            font-size: 0.9rem;
        }
    }
</style>
