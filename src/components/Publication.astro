---
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  abstract: string;
  pubDate: string;
  heroImage: ImageMetadata | string;
  conference: string;
  href?: string;
  authors: string;
}

const myName = "Hongyi Cai";

const { title, abstract, pubDate, heroImage, conference, href, authors, ...props } = Astro.props;

const boldMyName = authors.replace(myName, `<strong>${myName}</strong>`);
---

<article class="publication-card" {...props}>
  <a href={href} class="pub-link">
    <div class="pub-image">
      {typeof heroImage === 'string' ? (
        <img src={heroImage} alt={title} loading="lazy"/>
      ) : (
        <img src={heroImage.src} alt={title} loading="lazy"/>
      )}
    </div>
    
    <div class="pub-content">
      <div class="pub-header">
        <h3 class="pub-title">{title}</h3>
        <div class="pub-meta">
          <span class="pub-authors" set:html={boldMyName}></span>
          <span class="pub-conference">{conference}</span>
          <span class="pub-date">{pubDate}</span>
        </div>
      </div>
      
      <p class="pub-abstract">{abstract}</p>
    </div>
  </a>
</article>

<style>
  .publication-card {
    display: block;
    margin-bottom: 2rem;
    transition: transform 0.2s ease;
  }

  .pub-link {
    display: flex;
    gap: 2rem;
    padding: 1.5rem;
    border-radius: 12px;
    background: #fff;
    border: 1px solid #e5e7eb;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .pub-link:hover {
    border-color: #6b7280;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.1);
    transform: translateY(-2px);
  }
  
  .pub-image {
    flex-shrink: 0;
    width: 280px;
    height: 180px;
    overflow: hidden;
    border-radius: 8px;
    background: #fff;
  }

  .pub-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .pub-link:hover .pub-image img {
    transform: scale(1.05);
  }

  .pub-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    min-width: 0;
  }

  .pub-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .pub-authors {
    font-size: 0.95rem;
    color: #111827;
  }

  .pub-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
    color: #111827;
    transition: color 0.2s ease;
  }

  .pub-link:hover .pub-title {
    color: #3b82f6;
  }

  .pub-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .pub-conference {
    font-weight: 700;
    color: #111827;
    font-size: 0.95rem;
    font-style: bold;
  }

  .pub-date {
    color: #6b7280;
    font-size: 0.9rem;
  }

  .pub-abstract {
    color: #111827;
    line-height: 1.6;
    margin: 0;
    font-size: 0.7em;
  }

  @media (max-width: 768px) {
    .pub-link {
      flex-direction: column;
      gap: 1rem;
    }

    .pub-image {
      width: 100%;
      height: 200px;
    }

    .pub-title {
      font-size: 1.1rem;
    }
  }
</style>